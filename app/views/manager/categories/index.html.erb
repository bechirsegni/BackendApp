<%= render 'form'%>
<div class="padding">
  <%if @categories.empty?%>
  <div class="no_product">
      <p>logo</p>
      <div class="no_product_header">
        <h1 class="no_product_h1">You Product Categories</h1>
        <p class="no_product_p">Categories make item organization easy. Monitor your most popular categories with reports.</p>
      </div>
  </div>
  <%else%>
  <%@categories.each do |category|%>
  <div class="row">
    <div class="col-md-10">
      <%=category.name%>
    </div>
    <div class="col-md-1">
      <p><%= count = category.products.count %> <% if count > 1 %>Products<% else %>Product<% end %></p>
    </div>
    <div class="col-md-1">
      <p>Delete</p>
    </div>
    </div>
    <hr style="margin-top: 0rem;">
  <%end%>
  <%end%>
</div>
