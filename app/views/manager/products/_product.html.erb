<div class="col-sm-12">
      <div class="box">
        <table class="table table-hover b-t">
          <thead>
            <tr>
              <th>Title</th>
              <th>Category</th>
              <th>Price</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <%@products.each do |product|%>
            <tr>
              <td><%=product.title%></td>
              <td><%=product.category.name%></td>
              <td><%=product.price[:name].titleize%> : <%=product.price[:price]%></td>
              <td>Delete | Edit</td>
            </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
