<%= form_for [:manager, @product] do |f|%>
  <%=f.label :title%>
  <%=f.text_field :title%>
  <%=f.label :description%>
  <%=f.text_field :description%>

  <%= f.select :category_id,
      nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}" },
                                              {:include_blank => 'Select Category'} %>

  <%=f.submit%>
<%end%>
